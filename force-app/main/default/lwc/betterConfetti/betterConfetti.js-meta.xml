<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>50.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property label = "Preview Mode" name ="previewActivated" type = "Boolean" description="Activates Buttons on the Component to preview different confetti and music." default="false"></property>
            <property label = "Field (API Value)" name ="field" type = "String"  datasource="apex://getObjectFields"></property>
            <property label = "Value (API Value)" name ="value" type = "String"  required="true"></property>
            <property label = "Confetti Activated" name = "confettiActivated" type="Boolean" default = "true"> </property>
            <property label = "Confetti Type" name ="confettiType" type = "String" datasource="Helau,Doppelfontaene,Feuerwerk, Kanone, Regen" default="Helau"  required="true"></property>
            <property label = "Music Activated" name = "musicActivated" type="Boolean" default = "false"> </property>
            <property label = "Music Type" name ="musicType" type = "String" datasource="Schloss,Bratenfreude,SonntagNachmittag,Up,Sommer,Schlosseingang,Preisverleihung,Heimkommen" default="testMusic"  required="true"></property>

        </targetConfig>

    </targetConfigs>

    
</LightningComponentBundle>